@global sys_accept;
@define sys_accept(fd,sockaddr,size) {
	@local sa, ss, r;

	if(isnil(size)) {
		size=sizeof(*sockaddr);
	} else {
		size=*size;
	}
	sa=___malloc(size);
	if(!sa) return -1;

	putbytes(sa,getbytes(sockaddr,size));

	ss=___malloc(sizeof(unix`int));
	if(!ss) {
		_free(sa);
		return -1;
	}

	ss=(unix`int *)ss;

	*ss=size;

	r = syscall(unix`accept,fd,sa,ss);

	_free(sa);
	_free(ss);

	return r;
}

