@global sys_sleep;
@define sys_sleep(secs) {
	@local r,m,m2;

	m=___malloc(sizeof(struct unix`timespec));
	if(!m)
		return -1;
	m=(struct unix`timespec *)m;
	m->tv_sec=secs;
	m->tv_nsec=0;

	m2=___malloc(sizeof(struct unix`timespec));
	if(!m2) {
		_free(m);
		return -1;
	}
	m2=(struct unix`timespec *)m2;

	r = syscall(unix`nanosleep,m,m2);

	if(!r) {
		_free(m);
		_free(m2);

		return r;
	} else {
		r = m2->tv_sec;

		_free(m);
		_free(m2);

		return r;
	}
}

