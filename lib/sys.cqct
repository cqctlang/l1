@global sys_read;
@define sys_read(fd, buf, len) {
	@local m, r, c;

	m=___malloc(len);
	if(!m) {
		return -1;
	}
	r=syscall(unix`read, fd, m, len);
	if(r > 0) {
		c = getbytes(m, r);
		putbytes(buf, c);
	}

	_free(m);

	return r;
}

@global sys_write;
@define sys_write(fd, buf, len) {
	@local m, r;

	m=___malloc(len);

	if(!m) {
		return -1;
	}

	if(isstring(buf)) {
		if(length(buf) > len) {
			putbytes(m, substr(buf, 0, len));
		} else {
			putbytes(m, buf);
		}
	} else {
		memcpy(m, buf, len);
	}

	r=syscall(unix`write, fd, m, len);

	_free(m);

	return r;
}

