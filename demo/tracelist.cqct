@include <ctlmux.cqct>

@define printlist(dom)
{
	p = dom`head;
	while(p){
		printf("%d ", p->v);
		p = p->next;
	}
	printf("\n");
}

@define manglelist(dom)
{
	p = dom`head;
	while(p){
		printf("%d ", p->v++);
		p = p->next;
	}
	printf("\n");
}

// test printlist
@define test1(n)
{
	@local ctl, mux, ns, as, dom;

	ns = @names clp64le { @include "./list.names" };
	mux = mkctlmux();
	ctl = mux.launch(["./list", sprintfa("%d", n)], 0);
	as = ctl.mem();
	dom = mkdom(ns, as);
	dom.xtrap(&dom`insert,
		  @lambda(ctl){
			  printlist(dom);
			  return nil;
		  });
	dom.xcont();
	mux.run();
}


// test manglelist
@define test2(n)
{
	@local ctl, mux, ns, as, dom, m;

	m = 0;
