include conf/mk.unix

HEAPO	= heap.o
L1X     += $(HEAPO)

mkc: mkc.o
	@echo + ld $@
	$(V)$(CC) $(CFLAGS) -o $@ $^

mks: mks.o
	@echo + ld $@
	$(V)$(CC) $(CFLAGS) -o $@ $^

$(HEAPO): $(HEAP) mks
	@echo + mks $@
	$(V)./mks -a 0x1000 -p _ -s heapimage $(HEAP) $(IDIR)heap.S
	$(V)$(AS) -o $(HEAPO) $(IDIR)heap.S
	$(V)rm -f $(IDIR)heap.S
